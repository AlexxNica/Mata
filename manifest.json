{
  "manifest_version": 2,

  "name": "Mata",
  "description": "Reading should be friendly for your eyes",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": { "38": "mata-inactive.png" }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-2.1.4.min.js", "content.js"]
    }
  ]
}
